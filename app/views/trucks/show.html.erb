<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @truck.name %>
</p>

<p>
  <b>Website:</b>
  <%= @truck.website %>
</p>

<p>
  <b>Twitter:</b>
  <%= @truck.twitter %>
</p>

<p>
  <b>Yelp:</b>
  <%= @truck.yelp %>
</p>

<p>
  <b>Stops:</b>
  <table>
  <% @this_weeks_stops.each do |stop| %>
    <tr>
      <td><%= stop.location.address %></td>
      <td><%= stop.day %></td>
      <td><%= stop.start_time %></td>
      <td><%= stop.end_time %></td>
      <td><%= link_to 'Show', stop %></td>
      <td><%= link_to 'Edit', edit_one_time_stop_path(stop) %></td>
      <td><%= link_to 'Destroy', stop, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>
</p>

<%= link_to 'New Stop', new_one_time_stop_path(:truck_id => @truck.id) %> |
<%= link_to 'Recurring Stops', truck_recurring_stops_path(@truck) %> |
<%= link_to 'Edit', edit_truck_path(@truck) %> |
<%= link_to 'Back', trucks_path %>
