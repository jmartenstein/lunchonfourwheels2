<h1>Listing recurring_stops</h1>

<table>
  <tr>
    <th>Truck</th>
    <th>Location</th>
    <th>Day of week</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Start time</th>
    <th>End time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recurring_stops.each do |recurring_stop| %>
  <tr>
    <td><%= recurring_stop.truck_id %></td>
    <td><%= recurring_stop.location_id %></td>
    <td><%= recurring_stop.day_of_week %></td>
    <td><%= recurring_stop.start_date %></td>
    <td><%= recurring_stop.end_date %></td>
    <td><%= recurring_stop.start_time %></td>
    <td><%= recurring_stop.end_time %></td>
    <td><%= link_to 'Show', recurring_stop %></td>
    <td><%= link_to 'Edit', edit_recurring_stop_path(recurring_stop) %></td>
    <td><%= link_to 'Destroy', recurring_stop, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

